<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstSignUpFragment"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/sign_up_background">

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/white"
            android:elevation="3dp"
            android:src="@drawable/back_ico" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:paddingRight="60dp"
            android:text="Güvenli Pati" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_background"
            android:inputType="textEmailAddress"
            android:hint="Email giriniz..."
            android:paddingStart="15dp"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text_background"
            android:drawableEnd="@drawable/password"
            android:inputType="textPassword"
            android:hint="Şifre giriniz..."
            android:paddingStart="15dp"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginButton"
            style="@android:style/Widget.Button"
            android:layout_width="237dp"
            android:layout_height="75dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_bg_signup"
            android:drawableRight="@drawable/paw7"
            android:paddingRight="13dp"
            android:text="Giriş Yap"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:elevation="10dp"/>

    </LinearLayout>
</LinearLayout>