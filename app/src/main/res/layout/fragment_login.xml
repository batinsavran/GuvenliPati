<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstSignUpFragment"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/white"
            android:elevation="3dp"
            android:src="@drawable/back_ico" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:paddingRight="60dp"
            android:text="Güvenli Pati" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:background="@drawable/cat5"
            android:layout_width="200dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Evcil Dostunun en iyi yardımcısı \nGüvenli Pati'ye tekrar \nHoş geldin..." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_background"
            android:inputType="textEmailAddress"
            android:hint="Email giriniz..."
            android:paddingStart="15dp"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text_background"
            android:inputType="textPassword"
            android:hint="Şifre giriniz..."
            android:paddingStart="15dp"
            android:textSize="17sp" />
        <ImageButton
            android:id="@+id/lockPassword"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="-46dp"
            android:layout_marginRight="-145dp"
            android:src="@drawable/looking_password"
            android:background="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şifrenizi mi Unuttunuz?"
            android:layout_marginTop="31dp" />

        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton"
        style="@android:style/Widget.Button"
        android:layout_width="237dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg_signup"
        android:drawableRight="@drawable/paw7"
        android:paddingRight="13dp"
        android:text="Giriş Yap"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:elevation="10dp"/>

    </LinearLayout>


</LinearLayout>