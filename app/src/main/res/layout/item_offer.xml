<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/advertCard">


    <androidx.cardview.widget.CardView
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:background="@color/white"
        android:elevation="100dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <androidx.cardview.widget.CardView
                android:id="@+id/petImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/petPhotoImageView"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/index_bird" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/petTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alata"
                android:text="British Shorthair"
                android:textColor="#616060"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@+id/petNameTextView"
                app:layout_constraintTop_toBottomOf="@+id/petNameTextView" />

            <TextView
                android:id="@+id/petNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Pofuduk"
                android:textColor="@color/lightblack"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.195"
                app:layout_constraintStart_toEndOf="@+id/petImage"
                app:layout_constraintTop_toTopOf="@+id/petImage" />

            <TextView
                android:id="@+id/jobTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alata"
                android:text="Evde Bakma"
                android:textColor="#616060"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@+id/petTypeTextView"
                app:layout_constraintTop_toBottomOf="@+id/petTypeTextView" />

            <TextView
                android:id="@+id/endDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:fontFamily="@font/alata"
                android:text="15.04.2024"
                android:textColor="#616060"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/startDateTextView"
                app:layout_constraintStart_toEndOf="@+id/startDateTextView"
                app:layout_constraintTop_toTopOf="@+id/startDateTextView"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/alata"
                android:text="-"
                android:textColor="#616060"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/startDateTextView"
                app:layout_constraintStart_toEndOf="@+id/startDateTextView"
                app:layout_constraintTop_toTopOf="@+id/startDateTextView"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/startDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alata"
                android:text="11.04.2024"
                android:textColor="#616060"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@+id/jobTypeTextView"
                app:layout_constraintTop_toBottomOf="@+id/jobTypeTextView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="-4dp"
                android:layout_marginTop="10dp"
                android:foreground="#B0FFFFFF"
                android:src="@drawable/location_ico"
                app:layout_constraintStart_toStartOf="@+id/startDateTextView"
                app:layout_constraintTop_toBottomOf="@+id/startDateTextView"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/alata"
                android:text="İzmir, Urla"
                android:textColor="#B01E1E1E"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <ImageButton
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:id="@+id/buttonDeleteOffer"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edit_pet_image_bg"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:src="@drawable/trash_ico"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#FF0000" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:background="#4A1E1E1E"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/petImage" />

            <androidx.cardview.widget.CardView
                android:id="@+id/backerImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="67dp"
                android:layout_marginTop="24dp"
                app:cardElevation="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2">

            <ImageView
                android:id="@+id/backerPhotoImageView"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:scaleType="centerCrop"
                android:src="@drawable/men_image" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/backerNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Batın Gökçe Savran"
                android:textColor="@color/lightblack"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/backerImage" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/alata"
                android:text="Teklif Tutarı : "
                android:textColor="#616060"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/backerNameTextView"
                app:layout_constraintTop_toBottomOf="@+id/backerNameTextView" />

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="650 TL"
                android:textColor="#06F15F"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView22"
                app:layout_constraintStart_toEndOf="@+id/textView22"
                app:layout_constraintTop_toTopOf="@+id/textView22" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/payButton"
                style="@android:style/Widget.Button"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="68dp"
                android:background="@drawable/button_bg_signup"
                android:elevation="10dp"
                android:fontFamily="@font/alata"
                android:text="Ödeme Yap"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22" />

            <ImageButton
                android:id="@+id/buttonGoChat"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:background="@drawable/chat_ico_background"
                android:elevation="3dp"
                android:padding="11dp"
                android:scaleType="fitCenter"
                android:src="@drawable/chat_ico"
                app:layout_constraintBottom_toBottomOf="@+id/payButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/payButton"
                app:layout_constraintTop_toTopOf="@+id/payButton"
                app:tint="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>