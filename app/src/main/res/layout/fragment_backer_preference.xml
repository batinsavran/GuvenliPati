<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RegisterBackerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="İlgilenilecek Dostlar :"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.chip.Chip
                    android:id="@+id/dogs"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:elevation="5dp"
                    android:textAlignment="center"
                    android:text="Köpekler"
                    app:chipBackgroundColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView10" />


                <com.google.android.material.chip.Chip
                    android:id="@+id/cats"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="5dp"
                    android:textAlignment="center"
                    android:text="Kediler"
                    app:chipBackgroundColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dogs" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/birds"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="5dp"
                    android:textAlignment="center"
                    android:text="Kuşlar"
                    app:chipBackgroundColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/cats" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Müsaitlik Durumu :"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    android:layout_marginBottom="16dp"
                    app:chipSpacingHorizontal="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView11">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/midWeek"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="110dp"
                        android:layout_height="60dp"
                        android:elevation="5dp"
                        android:textAlignment="center"
                        android:text="Hafta İçi"
                        app:chipBackgroundColor="@color/white" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/weekEnd"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="110dp"
                        android:layout_height="60dp"
                        android:elevation="5dp"
                        android:textAlignment="center"
                        android:text="Hafta Sonu"
                        app:chipBackgroundColor="@color/white" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/allDays"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="110dp"
                        android:layout_height="60dp"
                        android:elevation="5dp"
                        android:textAlignment="center"
                        android:text="Tüm Günler"
                        app:chipBackgroundColor="@color/white" />

                </com.google.android.material.chip.ChipGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="İş Durumu :"
                android:textSize="17sp"
                android:layout_marginStart="12dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/job1"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:elevation="5dp"
                    android:text="Evde Bakma"
                    android:textAlignment="center"
                    app:chipBackgroundColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editTextBoarding"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/edit_text_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/alata"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:textSize="17sp"
                    android:enabled="false"
                    app:layout_constraintStart_toEndOf="@+id/job1"
                    app:layout_constraintTop_toTopOf="@+id/job1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/alata"
                    android:text="TL/Gün"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/editTextBoarding"
                    app:layout_constraintStart_toEndOf="@+id/editTextBoarding"
                    app:layout_constraintTop_toTopOf="@+id/editTextBoarding" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/job2"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:elevation="5dp"
                    android:text="Besleme"
                    android:textAlignment="center"
                    app:chipBackgroundColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editTextBoarding2"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/edit_text_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/alata"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:textSize="17sp"
                    android:enabled="false"
                    app:layout_constraintStart_toEndOf="@+id/job2"
                    app:layout_constraintTop_toTopOf="@+id/job2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/alata"
                    android:text="TL/Gün"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/editTextBoarding2"
                    app:layout_constraintStart_toEndOf="@+id/editTextBoarding2"
                    app:layout_constraintTop_toTopOf="@+id/editTextBoarding2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/job3"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:elevation="5dp"
                    android:text="Gezdirme"
                    android:textAlignment="center"
                    app:chipBackgroundColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editTextBoarding3"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/edit_text_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/alata"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:textSize="17sp"
                    android:enabled="false"
                    app:layout_constraintStart_toEndOf="@+id/job3"
                    app:layout_constraintTop_toTopOf="@+id/job3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/alata"
                    android:text="TL/Saat"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/editTextBoarding3"
                    app:layout_constraintStart_toEndOf="@+id/editTextBoarding3"
                    app:layout_constraintTop_toTopOf="@+id/editTextBoarding3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/job4"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:elevation="5dp"
                    android:text="...."
                    android:textAlignment="center"
                    app:chipBackgroundColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editTextBoarding4"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/edit_text_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/alata"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:textSize="17sp"
                    android:enabled="false"
                    app:layout_constraintStart_toEndOf="@+id/job4"
                    app:layout_constraintTop_toTopOf="@+id/job4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/alata"
                    android:text="TL/..."
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/editTextBoarding4"
                    app:layout_constraintStart_toEndOf="@+id/editTextBoarding4"
                    app:layout_constraintTop_toTopOf="@+id/editTextBoarding4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:paddingRight="90dp"
                android:paddingLeft="90dp"
                android:layout_marginBottom="0dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/JobOptionButton"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/alata"
                    android:paddingRight="50dp"
                    android:elevation="5dp"
                    android:text="Bilgilerimi Kaydet"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.79" />

                <ImageView
                    android:id="@+id/buttonPaw2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="10dp"
                    android:src="@drawable/button_paw_ico"
                    app:layout_constraintBottom_toBottomOf="@+id/JobOptionButton"
                    app:layout_constraintEnd_toEndOf="@+id/JobOptionButton"
                    app:layout_constraintTop_toTopOf="@+id/JobOptionButton"
                    tools:ignore="UseAppTint" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>